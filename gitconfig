[user]
	email = janko@luin.se
	name = Janko Luin

[init]
	templatedir = ~/dotfiles/git_template

[push]
	default = tracking

[pull]
	rebase = true

[alias]
	commit = commit --verbose

[core]
	excludesfile = ~/dotfiles/.gitignore

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[pretty]
	compact = format:%Cblue%h%Creset %cr %C(bold black)%an%Cgreen%d%Creset %s

[include]
	path = ~/.gitconfig.local
[diff]
	compactionHeuristic = true
